{
  "name": "@plasmohq/rps",
  "version": "1.3.4",
  "description": "Run scripts in parallel or in sequence.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "run-s": "./dist/run-s.js",
    "run-p": "./dist/run-p.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/run-p.ts src/run-s.ts src/index.ts --watch --sourcemap",
    "build": "tsup src/run-p.ts src/run-s.ts src/index.ts --dts-resolve --format esm --minify --clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmohq/rps.git"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "license": "MIT",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/cross-spawn": "6.0.2",
    "@types/minimatch": "3.0.5",
    "@types/node": "17.0.41",
    "@types/shell-quote": "1.7.1",
    "prettier": "2.6.2",
    "tsup": "6.1.0",
    "typescript": "4.7.3"
  },
  "dependencies": {
    "cross-spawn": "7.0.3",
    "minimatch": "5.1.0",
    "pidtree": "0.6.0",
    "read-pkg": "7.1.0",
    "shell-quote": "1.7.3"
  }
}
