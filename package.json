{
  "name": "@plasmohq/rps",
  "version": "1.8.6",
  "description": "Run scripts in parallel or in sequence.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "run-s": "./bin/run-s.mjs",
    "run-p": "./bin/run-p.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/run-p.ts src/run-s.ts src/index.ts --watch --sourcemap",
    "build": "tsup src/run-p.ts src/run-s.ts src/index.ts --dts-resolve --format esm --minify --clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmohq/rps.git"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "license": "MIT",
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "workspace:*",
    "@types/cross-spawn": "6.0.2",
    "@types/minimatch": "5.1.2",
    "@types/node": "20.2.4",
    "@types/shell-quote": "1.7.1",
    "prettier": "2.8.8",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "cross-spawn": "7.0.3",
    "minimatch": "9.0.1",
    "pidtree": "0.6.0",
    "read-pkg": "8.0.0",
    "shell-quote": "1.8.1"
  }
}
