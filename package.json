{
  "name": "@plasmo-corp/rps",
  "version": "1.1.0",
  "description": "Run scripts in parallel or in sequence.",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "run-s": "./dist/run-s.js",
    "run-p": "./dist/run-p.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "esbuild src/run-p.ts src/run-s.ts --bundle --watch --platform=node --outdir=dist",
    "build": "esbuild src/run-p.ts src/run-s.ts --bundle --minify --platform=node --outdir=dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "prepare": "run-s clean build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmo-corp/rps.git"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "license": "MIT",
  "devDependencies": {
    "@plasmo-corp/rps": "1.1.0",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/minimatch": "3.0.5",
    "@types/cross-spawn": "6.0.2",
    "@types/node": "17.0.19",
    "@types/shell-quote": "1.7.1",
    "esbuild": "0.14.23",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "cross-spawn": "7.0.3",
    "minimatch": "5.0.0",
    "pidtree": "0.5.0",
    "read-pkg": "7.1.0",
    "shell-quote": "1.7.3"
  }
}
