{
  "name": "@plasmohq/rps",
  "version": "1.8.7",
  "description": "Run scripts in parallel or in sequence.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "run-s": "./bin/run-s.mjs",
    "run-p": "./bin/run-p.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/run-p.ts src/run-s.ts src/index.ts --watch --sourcemap",
    "build": "tsup src/run-p.ts src/run-s.ts src/index.ts --dts-resolve --format esm --minify --clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmohq/rps.git"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cross-spawn": "6.0.6",
    "@types/minimatch": "5.1.2",
    "@types/node": "20.11.5",
    "@types/shell-quote": "1.7.5",
    "prettier": "3.2.4",
    "tsup": "8.0.1",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "cross-spawn": "7.0.5",
    "minimatch": "9.0.3",
    "pidtree": "0.6.0",
    "read-pkg": "9.0.1",
    "shell-quote": "1.8.1"
  }
}
